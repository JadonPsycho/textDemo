<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/id_camera_ll"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/oval_style">
        <com.frontcamera.zhousong.frontcamera.MySurfaceView
            android:id="@+id/surfaceView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:background="#00000000"
            android:layout_alignParentRight="true" >
        </com.frontcamera.zhousong.frontcamera.MySurfaceView>
    </LinearLayout>


    <TextView
        android:id="@+id/id_camera_tv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请放置好手机，进行人脸识别"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/id_camera_ll"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/id_camera_tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输出结果:"
        android:layout_marginTop="14dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/id_camera_tv_up"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/id_camera_tv_tip_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示内容"
        android:layout_marginTop="14dp"
        android:textStyle="italic"
        android:textSize="16sp"
        android:layout_below="@+id/id_camera_tv_tip"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>